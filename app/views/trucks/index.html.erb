<div id="map"></div>

<div class="col-xs-12 col-sm-2">
  <p style="padding:40px;"></p>
  <p><a class="btn btn-warning btn-block" data-toggle = "modal" data-target = "#searchModal">Search</a></p>
</div>

<div id="searchModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" style="color:black">Search For Foodtrucks</h4>
      </div>
      <div class="modal-body">
          <div class="row row-content">
            <div class="col-xs-12 col-sm-9">
            <h3 align=center style="color: black">
             <%= form_tag(trucks_path, :method => "get", id: "search-form") do %>
              <%= select_tag(:type, options_for_select([['Cuisine', "cuisine"], ['Location', "location"], ['Foodtruck', "truck"], ["Day","day"]], selected: :type )) %>
              <%= text_field_tag :search, params[:search], placeholder: "Search" %>
              <%= submit_tag "Search" %>
              </h3>
              <% end %>
            </div>
         </div>
      </div>
    </div>
  </div>
</div>
